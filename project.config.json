{
	"browserSyncProxy" : "https://process.studio",
	"browser" : "google chrome",
	"ftpConfig" : "./ftp.config.json",
	"wwwBase": "wp-content/themes/rkstudio/",
	"basePath" : "theme/",
	"paths" : {
		"templates" : {
			"src" : ["./*", "./**/*.php", "!.*"],
			"dest" : "./"
		},
		"styles" : {
			"src" : "_/styles/*.scss",
			"dest" : "_/styles/dist/"
		},
		"scripts" : {
			"src" : ["_/scripts/*.js", "!_/scripts/*.min.js"],
			"dest" : "_/scripts/dist/"
		}
	}
}
